- var prod = false;

mixin dev_head(page_title)
    head
        title=page_title
        |
        | <!-- saved from url=(0014)about:internet -->
        meta(charset='utf-8')
        meta(name='viewport', content="width=device-width, initial-scale=1.0")
        meta(name="SKYPE_TOOLBAR", content="SKYPE_TOOLBAR_PARSER_COMPATIBLE")
        meta(name="apple-mobile-web-app-capable", content="yes")
        meta(name="format-detection", content="telephone=no")
        meta(name="theme-color", content="#3d0ba9")

        - if (prod)
            style
                include ../styles/header_global.css

mixin loop_while(counter)
    -i=0;
    while i < counter
        -i++;
        block

mixin action_list()
  ul.action_list
    li: a.action_link._w(href='#')
      span Twitter
    li: a.action_link._t(href='#')
      span Telegram
    li: a.action_link._f(href='#')
      span Facebook
    li: a.action_link._r(href='#')
      span RSS

mixin footer(white)
    .footer(class= white ? '_white' : '')
        .section_inner
            ul.footer_menu
                li: a.footer_link(href='#') News
                li: a.footer_link(href='#') Features
                li: a.footer_link(href='#') Sharks pool
                li: a.footer_link(href='#') Price analysis
                li: a.footer_link(href='#') Share insight
                li: a.footer_link(href='about.html') About us

            .footer_logo
                a.logo(href='index.html')
                    img(src= white ? 'i/logo_f_v.png' : 'i/logo_c.svg')

            p Follow us with:

            +action_list()

        .go_top_holder.goTopHolder
            .section_inner
                a.go_top.goTop(href='#')

